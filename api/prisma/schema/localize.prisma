enum EntityType {
    PRODUCT
    COLLECTION
    FACET
    FACET_VALUE
    SEO_METADATA
    SEGMENT
}

enum TranslationProvider {
    GOOGLE_TRANSLATE
    GPT_3_5_TURBO
    GPT_4
    GPT_4_O
    GPT_4_O_MINI
    GPT_O1
    GPT_O1_MINI
}

enum TranslateModelType {
    GOOGLE_TRANSLATE
    GPT
}

model Translation {
    id       Int    @id @default(autoincrement())
    entityId String

    fieldName       String
    entityType      EntityType
    translatorModel TranslationProvider
    translatedValue String?

    channel_token String
    locale        String
    autoGenerated Boolean   @default(false)
    lastSyncedAt  DateTime?

    @@unique([entityType, entityId, locale, fieldName])
    @@index([entityType, entityId, locale, fieldName])
    @@index([entityType, entityId, fieldName])
    @@index([fieldName, locale])
}

model Locales {
    id            Int     @id @default(autoincrement())
    name          String
    code          String
    isActive      Boolean @default(true)
    channel_token String
}

model LocalizationSettings {
    id        Int @id @default(autoincrement())
    channelId Int @unique

    enabled                Boolean             @default(false)
    dynamicSegmentsEnabled Boolean             @default(false)
    autoTranslate          Boolean             @default(false)
    translationProvider    TranslationProvider @default(GPT_3_5_TURBO)

    channel_token String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
